@model PhoneBook.ViewModels.Home.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset>
    <legend>Login</legend>
    <form action="/Home/Login" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">Username:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.Username)</div>
                <div class="col-3">@Html.ValidationMessageFor(m => m.Username)</div>
            </div>
            <div class="row">
                <div class="col-1">Password:</div>
                <div class="col-2">@Html.PasswordFor(m => m.Password)</div>
                <div class="col-3">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <div class="row">
                <div class="col-3">@Html.ValidationMessage("AuthenticationFailed")</div>
            </div>
            <div class="row">
                <div class="col-3"><input type="submit" value="Login" /></div>
            </div>
        </div>
    </form>
</fieldset>