@model PhoneBook.ViewModels.Users.UsersIndexVM
@using PhoneBook.Entity
@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/Users/Create">New User</a>

<div class="grid">
    <div class="row">
        <div class="col-2">Username</div>
        <div class="col-2">First Name</div>
        <div class="col-2">Last Name</div>
    </div>
    @foreach (User item in Model.Items)
    {
        <div class="row">
            <div class="col-2">@item.Username</div>
            <div class="col-2">@item.FirstName</div>
            <div class="col-2">@item.LastName</div>
            <div class="col-2">
                <a href="/Users/Edit?id=@item.Id">edit</a>
                <a href="/Users/Delete?id=@item.Id">delete</a>
            </div>
        </div>
    }
</div>
