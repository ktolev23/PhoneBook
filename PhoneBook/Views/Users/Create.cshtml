@model PhoneBook.ViewModels.Users.UsersCreateVM
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset class="center">
    <legend>Create User</legend>
    <form action="/Users/Create" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">Username:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.Username)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Username)</div>
            </div>
            <div class="row">
                <div class="col-1">Password:</div>
                <div class="col-2">@Html.PasswordFor(m => m.Password)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <div class="row">
                <div class="col-1">First Name:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.FirstName)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.FirstName)</div>
            </div>
            <div class="row">
                <div class="col-1">Last Name:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.LastName)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.LastName)</div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input type="submit" value="Create" />
                    <a href="/Users/Index">back</a>
                </div>
            </div>
        </div>
    </form>
</fieldset>

