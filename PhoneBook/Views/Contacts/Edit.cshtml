@model PhoneBook.ViewModels.Contacts.ContactsEditVM
@{
    ViewData["Title"] = "Edit Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset>
    <legend>Edit Contact</legend>
    <form action="/Contacts/Edit" method="post">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.UserId)
        <div class="grid">
            <div class="row">
                <div class="col-1">First Name:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.FirstName)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.FirstName)</div>
            </div>
            <div class="row">
                <div class="col-1">Last Name:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.LastName)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.LastName)</div>
            </div>
            <div class="row">
                <div class="col-1">Email:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.Email)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Email)</div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input type="submit" value="Save" />
                    <a href="/Contacts/Index">back</a>
                </div>
            </div>
        </div>
    </form>
</fieldset>
